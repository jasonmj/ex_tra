{
    "name": "elixir-transform",
    "displayName": "elixir-transform",
    "description": "Transform selected test using Elixir scripts",
    "version": "0.2.0",
    "publisher": "jasonmj",
    "engines": {
        "vscode": "^1.102.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
         "onCommand:elixirTransform.transformSelection"
     ],
    "main": "./out/extension.js",
    "contributes": {
        "menus": {
            "editor/context": [
                {
                    "command": "elixirTransform.transformSelection",
                    "when": "editorHasSelection"
                }
            ]
        },
        "commands": [
             {
                 "command": "elixirTransform.transformSelection",
                 "title": "Elixir Transform"
             }
        ],
        "configuration": {
            "type": "object",
            "properties": {
                "elixirTransform.extraBinaryPath": {
                    "type": "string",
                    "default": "extra",
                    "description": "Path to the Elixir `extra` binary used for transformations."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.102.0",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.25.1",
        "typescript": "^5.8.3"
    }
}
